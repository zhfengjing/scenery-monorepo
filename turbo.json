{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "globalEnv": ["DATABASE_URL", "API_KEY"], 
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "env": ["NEXT_PUBLIC_API_URL"],
        "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
      },
      "lint": {
        "dependsOn": ["^lint"]
      },
      "dev": {
        "cache": false,
        "persistent": true
      },
      "test": {
        "dependsOn": ["build"],
        "outputs": ["coverage/**"],
        "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts"]
      },
      "clean": {
        "cache": false
      }
    }
  }